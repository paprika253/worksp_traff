package server;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import java.net.MalformedURLException;
import java.net.URL;
import java.net.URLConnection;

import javax.imageio.ImageIO;

import utilites.DbMySql;

public class Download_Images
{
	@SuppressWarnings("unused")
	private DbMySql	db;
	private String	path;

	public Download_Images(DbMySql db, String path)
	{
		this.db = db;
		this.path = path;
	}

	private String save(String img_src, int offer_id, int creative_id) throws MalformedURLException, IOException
	{
		img_src = img_src.replace("http:", "https:");
		String sufix="jpg";
		String img_type=getImgType(img_src);
		switch(img_type)
		{
		case "image/gif":
			sufix = "gif";
			break;
		}
		
		String fileName = path + "creativ_img/" + offer_id + "_" + creative_id + "."+sufix;
		
		File file = new File(fileName);
		if (!file.exists())
		{
			BufferedImage img = ImageIO.read(new URL(img_src));
			file.createNewFile();
			ImageIO.write(img, "jpg", file);
		}
		return null;
		
	}

	private String getImgType(String fileName) throws IOException
	{
		String type = null;
		
		URL u = new URL(fileName);
		URLConnection uc = null;
		uc = u.openConnection();
		type = uc.getContentType();
		return type;
	}

	public static void main(String[] args)
	{
		DbMySql db = new DbMySql("traff", "localhost", "yaa", "a20071952");
		//String path = "/var/www/html/server/";
		String path = "";
		String img_src = "http://www.mb01.com/getimage.asp?m=1569&o=1740&i=107046.dat";
		Download_Images di = new Download_Images(db, path);
		try
		{
			String url_img=di.save(img_src, 1740, 107045);
		} catch (IOException e)
		{
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
